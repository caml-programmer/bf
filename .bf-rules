(define (opam-ocaml-dir)
  (car (read-command "realpath ~/.opam/4*")))

(let* ((ocaml-dir (opam-ocaml-dir))
       (bindir (path-concat ocaml-dir "bin")))

  (if (file-exists bindir)
      (add-path bindir))

  (define (build args)
      (log-command "./configure")
    (log-command "make"))

  (define (install args)
      (log-command "sudo" "make" "install")))
